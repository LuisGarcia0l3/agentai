# =============================================================================
# AI Trading System - Environment Configuration
# =============================================================================

# =============================================================================
# EXCHANGE API CREDENTIALS
# =============================================================================

# Binance API (Recommended for crypto)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true  # Set to false for live trading

# Alpaca API (For US stocks)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Paper trading URL

# Interactive Brokers (Advanced users)
IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1

# =============================================================================
# AI/LLM API KEYS
# =============================================================================

# OpenAI (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://trading_user:trading_pass@localhost:5432/trading_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_db
DB_USER=trading_user
DB_PASSWORD=trading_pass

# Redis (for caching and real-time data)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Trading mode
TRADING_MODE=paper  # Options: paper, live
DEFAULT_EXCHANGE=binance
DEFAULT_SYMBOL=BTCUSDT

# Risk management
MAX_POSITION_SIZE=0.02  # 2% of portfolio per trade
MAX_DAILY_LOSS=0.05     # 5% max daily loss
STOP_LOSS_PERCENT=0.02  # 2% stop loss
TAKE_PROFIT_PERCENT=0.04 # 4% take profit

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_super_secret_key_here_change_this_in_production
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# External services configuration can be added here if needed

# =============================================================================
# BACKTESTING CONFIGURATION
# =============================================================================

# Data range for backtesting
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_CAPITAL=10000

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================

# Streamlit dashboard
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501

# FastAPI server
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent behavior
AGENT_UPDATE_INTERVAL=300  # 5 minutes
RESEARCH_AGENT_ENABLED=true
OPTIMIZER_AGENT_ENABLED=true
RISK_AGENT_ENABLED=true
TRADING_AGENT_ENABLED=false  # Start with false for safety

# Model parameters
ML_MODEL_RETRAIN_INTERVAL=86400  # 24 hours
STRATEGY_OPTIMIZATION_INTERVAL=3600  # 1 hour